<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.outracoisa.n2do2alessandro.ui.HomeFragment"
        android:label="CatÃ¡logo de Jogos"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addGameFragment"
            app:destination="@id/addGameFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.outracoisa.n2do2alessandro.ui.FavoriteFragment"
        android:label="Favoritos"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.outracoisa.n2do2alessandro.ui.DetailsFragment"
        android:label="Detalhes"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="game_id"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/addGameFragment"
        android:name="com.outracoisa.n2do2alessandro.ui.AddGameFragment"
        android:label="Nova Jogatina"
        tools:layout="@layout/fragment_add_game" />

</navigation>
